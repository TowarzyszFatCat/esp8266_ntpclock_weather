float getTemp(){
  float t = dht.readTemperature();
  return t;
}

float getHum(){
  float h = dht.readHumidity();
  return h;
}

#pragma endregion

int touchValue = 0;
int screenIndex = 0;

int maxIndex = 2;

void setup() {
  WiFi.begin(ssid, password);
  WiFi.hostname(newHostname.c_str());

  while ( WiFi.status() != WL_CONNECTED ) {
    delay ( 500 );
  }

  timeClient.begin();

  // OLED SETUP
  Wire.begin(2,1); 
  if(!display.begin(SSD1306_SWITCHCAPVCC, 0x3C)) {
    Serial.println(F("SSD1306 allocation failed"));
  for(;;);}
  delay(2000);
  display.clearDisplay();

  // PINMODE SETUP
  pinMode(LED_BUILTIN, OUTPUT); //Led płytka
  pinMode(touchButton, INPUT);

  // START DHT11
  dht.begin();
}

void loop() {

  timeClient.update();
  int hour = timeClient.getHours();
  int minute = timeClient.getMinutes();
  int second = timeClient.getSeconds();

  String hourstr = String(hour);
  String minutestr = String(minute);
  String secondstr = String(second);

  if(hourstr.length() == 1){
    hourstr = "0" + hourstr;
  }
  if(minutestr.length() == 1){
    minutestr = "0" + minutestr;
  }
  if(secondstr.length() == 1){
    secondstr = "0" + secondstr;
  }


  #pragma region screenIndex
  touchValue = digitalRead(touchButton);
  if(touchValue){
    screenIndex++;
    if(screenIndex == 3){
      screenIndex = 0;
    }
    delay(500);
  }
  #pragma endregion

  if(screenIndex == 0){
    display.clearDisplay();
    display.setTextSize(4);
    display.setCursor(0, 0);
    display.setTextColor(WHITE);
    display.println(getTemp());
    display.display();
  }

  if(screenIndex == 1){
    display.clearDisplay();
    display.setTextSize(4);
    display.setCursor(0, 0);
    display.setTextColor(WHITE);
    display.drawBitmap(0, 0, amogus, 128, 64, WHITE);
    display.display();
  }

  if(screenIndex == 2){
    display.clearDisplay();
    display.setCursor(0, 0);
    display.setTextColor(WHITE);
    display.drawBitmap(0, 0, amongus_left, 128, 64, WHITE);
    display.setTextSize(2);
    display.setCursor(50,0);
    display.print(hourstr + ":" + minutestr);
    display.setTextSize(1);
    display.print(":" + secondstr);
    display.setTextSize(1);
    display.setCursor(50,20);
    display.println("Temp: " + String(getTemp()));
    display.setCursor(50,28);
    display.println("Wilg: " + String(getHum()));
    display.display();
  }


